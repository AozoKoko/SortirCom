{% extends 'base.html.twig' %}

 {% block title %}Afficher Sortie{% endblock %}
{% block content %}
    <div>
        {{ form_start(Form) }}
       <div>
           {{ form_row(Form.nom,{'attr':{'value': item.nom}} ) }}
       </div>
        <br>
        <div>
            {{ form_row(Form.dateHeureDebut) }}
        </div>
        <br>
        <div>
            {{ form_row(Form.duree,{'attr':{'value': item.duree}}) }}
        </div>
        <br>
        <div>
            {{ form_row(Form.dateLimiteInscription) }}
        </div>
        <br>
        <div>
            {{ form_row(Form.nbInscriptionsMax,{'attr':{'value': item.nbInscriptionsMax}}) }}
        </div>
        <br>
        <div>
            {{ form_row(Form.infosSortie,{'attr':{'value': item.infosSortie}}) }}
        </div>
        <br>
     <div class="uk-flex uk-flex-center">
         <label >Lieu</label>
     </div>
        <div class="uk-flex uk-flex-center">


            <br>
            {{ form_row(Form.lieu,{'attr':{'value': item.lieu}}) }}
        </div>
        <br>
        <br>
        <div class="uk-flex uk-flex-center">
            <button class="uk-button uk-button-secondary">Modifier</button>
        </div>
        <br>
            <div class="uk-flex uk-flex-center">
                {{ form_row(Form.submit) }}
            </div>
        {{ form_end(Form) }}
    </div>
    <br>
    <div class="uk-flex uk-flex-center">
        <a href="{{ path('app_annulee',{'id': item.id}) }}" class="uk-button uk-button-secondary">Annuler la sortie</a>
    </div>
    <br>
{% endblock %}